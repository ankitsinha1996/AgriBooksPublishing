<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>action</servlet-name>
        <servlet-class>org.apache.struts.action.ActionServlet</servlet-class>
        <init-param>
            <param-name>config</param-name>
            <param-value>/WEB-INF/struts-config.xml</param-value>
        </init-param>
        <init-param>
            <param-name>debug</param-name>
            <param-value>2</param-value>
        </init-param>
        <init-param>
            <param-name>detail</param-name>
            <param-value>2</param-value>
        </init-param>
        <load-on-startup>2</load-on-startup>
    </servlet>
    <servlet>
        <servlet-name>AddManuscript</servlet-name>
        <servlet-class>com.agri.servlets.AddManuscript</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>BookCategory</servlet-name>
        <servlet-class>com.agri.servlets.BookCategory</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Design_Discuss</servlet-name>
        <servlet-class>com.agri.servlets.Design_Discuss</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>EditorCopy</servlet-name>
        <servlet-class>com.agri.servlets.EditorCopy</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>EditorVersion</servlet-name>
        <servlet-class>com.agri.servlets.EditorVersion</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Login</servlet-name>
        <servlet-class>com.agri.servlets.Login</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Logout</servlet-name>
        <servlet-class>com.agri.servlets.Logout</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>NewRelease</servlet-name>
        <servlet-class>com.agri.servlets.NewRelease</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UpdateArtwork</servlet-name>
        <servlet-class>com.agri.servlets.UpdateArtwork</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UploadEditorVersion</servlet-name>
        <servlet-class>com.agri.servlets.UploadEditorVersion</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ViewBook</servlet-name>
        <servlet-class>com.agri.servlets.ViewBook</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ViewManuscript</servlet-name>
        <servlet-class>com.agri.servlets.ViewManuscript</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AddAuthor</servlet-name>
        <servlet-class>com.agri.servlets.AddAuthor</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ShowAddManuscriptForm</servlet-name>
        <servlet-class>com.agri.servlets.ShowAddManuscriptForm</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UploadManuscript</servlet-name>
        <servlet-class>com.agri.servlets.UploadManuscript</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ShowViewManuscriptForm</servlet-name>
        <servlet-class>com.agri.servlets.ShowViewManuscriptForm</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>action</servlet-name>
        <url-pattern>*.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AddManuscript</servlet-name>
        <url-pattern>/AddManuscript</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>BookCategory</servlet-name>
        <url-pattern>/BookCategory</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Design_Discuss</servlet-name>
